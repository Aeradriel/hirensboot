<h2>Connexion</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :class => 'form-horizontal') do |f| %>
  <div class="form-group"><%= f.label :email, :class => "log_label control-label" %>
  <div class="col-sm-13"><%= f.email_field :email, :autofocus => true, :class => "log_input form-control" %></div></div>

  <div class="form-group"><%= f.label :password , :class => "log_label control-label" %>

  <%= f.password_field :password, :class => "log_input form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="form-group">
      <div class="col-sm-13"><%= f.check_box :remember_me %> <%= f.label :remember_me %></div></div>
  <% end -%>

  <div><%= f.submit "Se Connecter", :class => "btn btn-default" %></div>
<% end %>

<%= render "devise/shared/links" %>
